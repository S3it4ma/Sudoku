    <TextView
        android:id="@+id/partita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/esito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text=""/>

    <TextView
        android:id="@+id/tempo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="" />

</LinearLayout>